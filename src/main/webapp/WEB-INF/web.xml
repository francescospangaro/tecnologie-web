<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <display-name>TIW-servletIntro</display-name>

    <context-param>
        <param-name>webappC</param-name>
        <param-value>10</param-value>
    </context-param>

    <servlet>
        <servlet-name>UnsafeCounter</servlet-name>
        <servlet-class>it.polimi.tiw.counters.UnsafeCounter</servlet-class>
        <init-param>
            <param-name>servletC</param-name>
            <param-value>10</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>UnsafeCounter</servlet-name>
        <url-pattern>/UnsafeCounter</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
